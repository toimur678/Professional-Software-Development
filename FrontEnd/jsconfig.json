{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "styles/**/*",
    "next.config.js"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
