# EcoWisely Backend Environment Variables
# Copy this file to .env and fill in your values

# ===================
# Server Configuration
# ===================
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development
# ENVIRONMENT=production

# ===================
# External API Keys
# ===================
CLIMATIQ_API_KEY=<paste_key_here>
OPENWEATHERMAP_API_KEY=<paste_key_here>
GOOGLE_MAPS_API_KEY=<paste_key_here>

# ===================
# Database (Supabase)
# ===================
SUPABASE_URL=<from_supabase_dashboard>
SUPABASE_KEY=<from_supabase_dashboard>

# ===================
# Security
# ===================
SECRET_KEY=your_secret_key_for_jwt_signing
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# For production:
# ALLOWED_ORIGINS=https://ecowisely.com,https://www.ecowisely.com

# ===================
# Logging
# ===================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===================
# Rate Limiting
# ===================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===================
# Error Tracking
# ===================
SENTRY_DSN=

# ===================
# Feature Flags
# ===================
ENABLE_ML_PREDICTIONS=true
ENABLE_EXTERNAL_APIS=true
ENABLE_RATE_LIMITING=true